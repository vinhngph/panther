{
    "name": "Panther | Studocu Tool",
    "description": "View and download Studocu's documents without account.",
    "version": "1.0.4.3",
    "manifest_version": 3,
    "icons": {
        "16": "./src/assets/icon/icon16.png",
        "32": "./src/assets/icon/icon32.png",
        "48": "./src/assets/icon/icon48.png",
        "128": "./src/assets/icon/icon128.png"
    },
    "host_permissions": [
        "*://*.studocu.com/*",
        "*://*.studocu.vn/*"
    ],
    "permissions": [
        "activeTab",
        "cookies",
        "scripting"
    ],
    "background": {
        "service_worker": "./src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "./src/popup/popup.html",
        "default_icon": {
            "16": "./src/assets/icon/icon16.png",
            "32": "./src/assets/icon/icon32.png",
            "48": "./src/assets/icon/icon48.png",
            "128": "./src/assets/icon/icon128.png"
        }
    },
    "content_scripts": [
        {
            "css": [
                "./src/assets/styles/content.css"
            ],
            "matches": [
                "*://*.studocu.vn/*",
                "*://*.studocu.com/*"
            ]
        }
    ]
}